{% extends 'base.html.twig' %}

{% block title %}Просмотр позиции каталога{% endblock %}

{% block body %}
    <h1>Просмотр позиции каталога</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Название книги</th>
            <th>Название библиотеки</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for catalog in catalogs %}
            <tr>
                <td>{{ catalog.id }}</td>
                <td>
                        {{ catalog.genreLibr }}
                </td>
                <td>{{ catalog.nameLibr }}</td>

                <td>
                    <a href="{{ path('app_catalog_show', {'id': catalog.id}) }}">показать</a>
                    <a href="{{ path('app_catalog_edit', {'id': catalog.id}) }}">редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">записей нет</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_catalog_new') }}">Добавить</a>
{% endblock %}
