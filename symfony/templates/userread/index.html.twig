{% extends 'base.html.twig' %}

{% block title %}Пользователи{% endblock %}

{% block body %}
    <h1>Пользователи</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Возраст</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for userread in userreads %}
            <tr>
                <td>{{ userread.id }}</td>
                <td>{{ userread.family }}</td>
                <td>{{ userread.name }}</td>
                <td>{{ userread.age }}</td>
                <td>
                    <a href="{{ path('app_userread_show', {'id': userread.id}) }}">показать</a>
                    <a href="{{ path('app_userread_edit', {'id': userread.id}) }}">изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_userread_new') }}">Добавить</a>
{% endblock %}
